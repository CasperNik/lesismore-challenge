<h1><%= @post.title %></h1>
<p><span class="dateline">Updated: <%= @post.updated_at.strftime("%d %b %Y") %> </span></p>

<p id="notice"><%= notice %></p>

<p>
  <% text = decoderay(@post.body) %>
  <% erb = ERB.new(text, 0, "-").result(binding) %>
  <%= BlueCloth.new(erb).to_html.html_safe %>
</p>

<% if admin_user? %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', posts_path %>
